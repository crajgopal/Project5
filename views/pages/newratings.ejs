<!DOCTYPE html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title> Schedule Management App</title>
     <link rel="stylesheet " href ="styles.css">
  </head>
  <body>
    <%- include('../partials/header1') %>
    <main>

      
           
       
      <table class="tab">
        <thead>
          <tr>
            <th></th>
            <th >User ID</th>
            <th >User</th>
            <th >Day</th>
            <th >Start Time</th>
            <th >End Time</th>
          </tr>
        </thead>
        <tbody>
          <% for (let i = 0; i < schedules.length; i++) { %>
            <tr>
              <th></th>

              <td> <%= schedules[i].user_id %></td>
              <td><%= users[(schedules[i].user_id -1)].firstname%></td>
              <% for (let j = 1; j < days.length+1; j++) { %>
                <% if((schedules[i].day)==j) {%>
              <td><%= days[j-1] %></td>
             
              <% } %>
              <% } %>
              <td><%= schedules[i].start_time %></td>
              <td><%= schedules[i].end_time %></td>
            </tr>
          <% } %>
        </tbody>
      </table>
  

      <!-- ******Add new Schedules********** -->
      <div class="container">
     <div class="contact-form shadow p-3 mb-5 bg-white rounded">
      <div class="form-header text-center">
          <h2 id="h2">Add new schedules</h2>
      </div>
      <form method="POST" action="/schedules/newschedule">
          <div class="row">
              <div class="form-group" style="width: 340px;">
                  <label for="user_id">User Id</label>
                  <input type="text" id="username" name="user_id" placeholder="user id" class="form-control"
                      required />
              </div>
            
              <div class="form-group" style="width: 340px;">
                <label for="day">Day</label>
                <input type="text" id="day" name="day" placeholder="Day" class="form-control"
                    required />
            </div>

          <div class="form-group" style="width: 340px;">
              <label for="start_time">Start Time:</label>
              <input id="start_time" type="text" name="start_time" placeholder="HH:MM" class="form-control" required>
          </div>
          <div class="form-group" style="width: 340px;">
              <label for="end_time">End Time:</label>
              <input id="end_time" type="text" name="end_time" placeholder="HH:MM" class="form-control" required>
          </div>
          <div class="text-center form-group" id="btn">
              <button class="btn btn-danger">Add New Schedules</button>
          </div>
      </div>
      </form>
  </div>

     
      <div class="delete-form shadow p-3 mb-5 bg-white rounded">
        <h4> ** You cant delete other's schedules **</h4>
        <div class="form-header text-center">
          <h2 id="h2">Delete Schedule</h2>
      </div>
      <form  method="POST" action="/schedules/delschedule" >
        <div class="row">
          <div class="col-md-6">
        <div class="form-group" style="width: 340px;">
          <label for="user_id">User Id</label>
          <input type="text" id="user_id" name="user_id" placeholder="user id" class="form-control"
              required />
      </div>
    
      <div class="form-group" style="width: 340px;">
        <label for="day">Day</label>
        <input type="text" id="day" name="day" placeholder="Day" class="form-control"
            required />
    </div>
  </div>
  <div class="text-center form-group" id="btn">
    <button class="btn btn-danger">Delete Schedules</button>
</div>
</div>
    </form>
  </div>

</div>
  </main>

   <%- include('../partials/footer') %>
</body>

</html> 